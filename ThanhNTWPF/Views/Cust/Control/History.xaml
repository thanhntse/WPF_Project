<UserControl x:Class="ThanhNTWPF.Views.Cust.Control.History"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThanhNTWPF.Views.Cust.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Booking History" Margin="10"/>
        <DataGrid Grid.Row="1" Grid.Column="0" x:Name="DataGrid" AutoGenerateColumns="True" CanUserAddRows="False" ItemsSource="{Binding BookingReservations}" SelectionChanged="DataGrid_SelectionChanged" Margin="10"/>
    </Grid>
</UserControl>
